            cost=420;
        }
        else if(num==5)
        {
            name[z]="Burnt Tongues";
            price[z]=300.0;
            z++;
            System.out.println("The cost of your choice is Rs.300.0  ");
            cost=300;
        }
         System.out.println("Enter the number of books you would like to buy");
        num=sc.nextInt();
            
