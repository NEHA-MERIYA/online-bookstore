        for (double i =0;i<=1000000000;i++);
        System.out.println("    4.         Crash                                  I. G. Ballard          "); 
        for (double i =0;i<=1000000000;i++);
        System.out.println("    5.         Burnt Tongues                          Richard Thomas         ");
        for (double i =0;i<=1000000000;i++);
        System.out.println("***********************************************************");
        System.out.println("Enter serial number of the book you want to buy");
        int num=sc.nextInt();
        if(num==1)
        {
            name[z]="American Psycho";
            price[z]=430.0;
            z++;
