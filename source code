    public void Transgressive_Fiction()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Welcome to Transgressive_Fiction section");
        System.out.println("Shop for books with amazing discounts during the Great Indian Sale");
        System.out.println("The latest collections of books have just come in");
        System.out.println("Fiction books section provides you with its own varieties");
        System.out.println("The Books Available Here Are:");
        System.out.println("                                                         ");
        System.out.println("***********************************************************");
        System.out.println("        ☺ TRRANSGRESSIVE FICTION BOOKS ☺                       ");
        System.out.println("***********************************************************");
        System.out.println(" SERIAL NO.          BOOK NAME                             AUTHOR            ");
        System.out.println("    1.         American Psycho                        Bret Easton Ellis      ");
