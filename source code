    public void Biogaphies_and_Autobiographies()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Welcome to the section of biogaphies and autobiographies");
        System.out.println("Shop for books with amazing discounts during the Great Indian Sale");
        System.out.println("The Books Available Here Are:");
        System.out.println("1.Biogaphies");
        System.out.println("2.Autobiographies");
        System.out.println("Enter your choice");
        int chwo=sc.nextInt();
        switch(chwo)
        {
            case 1:
            System.out.println("This is biogaphies section");
            System.out.println("The latest collections of books have just come in");
            System.out.println("                                                         ");
            System.out.println("The Books Available Here Are:");
            System.out.println("***********************************************************");
            System.out.println("                               ☺ BIOGRAPHIES ☺                             ");
            System.out.println("***********************************************************");

            System.out.println(" SERIAL NO.          BOOK NAME                             AUTHOR            ");
            System.out.println("    1.         Stray:Memoir Of A Runaway              Tanya Marquardt      ");
            for (double i =0;i<=1000000000;i++);
            System.out.println("    2.         The Last Madam                         Chris Waltz        ");
            for (double i =0;i<=1000000000;i++);
            System.out.println("    3.         The Truth Island                       Diana Marcum             ");
            for (double i =0;i<=1000000000;i++);
            System.out.println("    4.         Three James Harriot Classics           James Harriot       "); 
            for (double i =0;i<=1000000000;i++);
            System.out.println("    5.         The Simple Faith Of Mista Rogers       Amy Hollingsworth           ");
            for (double i =0;i<=1000000000;i++);
            System.out.println("    6.         Fear:Triumph In The White House        Bob Woodword          ");
            for (double i =0;i<=1000000000;i++);
            System.out.println("    7.         The Woman In The Strong Box            Maureen O'Hagan           ");
            for (double i =0;i<=1000000000;i++);
            System.out.println("    8.         Educated:A Memoir                      Tara Westover            ");
            for (double i =0;i<=1000000000;i++);
